<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorGray</item>
        <item name="android:textColorPrimary">@color/colorGray</item>
        <item name="android:textColorSecondary">@color/colorWhiteWeak2</item>
        <item name="colorPrimaryDark">@color/colorGray</item>
        <item name="colorAccent">@color/colorGrayWeak</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundCornerBottomSheet</item>
    </style>

    <style name="RoundCornerBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_dialog_round_corner</item>
    </style>

    <style name="AppTheme.OMGEditText">
        <item name="colorControlNormal">@color/colorWhiteWeak2</item>
        <item name="colorControlActivated">@color/colorBlue</item>
        <item name="colorControlHighlight">@color/colorBlue</item>
    </style>

    <style name="AppTheme.OMGSwitch">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorBlue</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/colorGrayWeak</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42858B9A</item>
    </style>

    <style name="OMGHintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorBlue</item>
    </style>

    <style name="AppTheme.OMGButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/selector_blue_button</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="AppTheme.OMGButtonOutline" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/selector_blue_outline_button</item>
        <item name="android:textColor">@color/color_button_outline</item>
    </style>

    <style name="OMGBoldText">
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>
</resources>
