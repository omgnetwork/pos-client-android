<resources>
    <!-- Global app theme -->
    <!-- More balanceInfo: https://github.com/material-components/material-components-android/blob/master/docs/theming/Color.md -->
    <style name="OMGTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Displayed most frequently across the app. -->
        <item name="colorPrimary">@color/colorGray</item>
        <!-- For buttons, bottom nav tabs,  -->
        <item name="colorSecondary">@color/color_omg_btn_selector</item>
        <!-- For status bar scrim color -->
        <item name="colorPrimaryDark">@color/colorGray</item>

        <!-- The color used for indicate error status. -->
        <item name="colorError">@color/colorRed</item>

        <!-- The color for stated UI e.g. edittext, checkbox, switch, button -->
        <item name="colorControlHighlight">@color/colorGrayWeak</item>
        <item name="colorControlActivated">@color/colorBlue</item>
        <item name="colorControlNormal">@color/color_edit_text_baseline_selector</item>

        <!-- Text color -->
        <item name="android:textColorPrimary">@color/colorGray</item>
        <item name="android:textColorSecondary">@color/color_omg_text_selector</item>
        <item name="android:textColorTertiary">@color/colorBlackWeak</item>
        <item name="android:textColorHint">@color/color_edit_text_selector</item>

        <!-- Components -->
        <item name="bottomSheetDialogTheme">@style/OMGBottomSheet</item>
        <item name="materialButtonStyle">@style/OMGButton</item>
        <item name="textInputStyle">@style/OMGTextInputLayout</item>
        <item name="editTextStyle">@style/OMGTextInputEditText</item>
    </style>

    <!-- Splash Screen theme. -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorGray</item>
        <item name="colorSecondary">@color/color_omg_btn_selector</item>
        <item name="colorPrimaryDark">@color/colorGray</item>
        <item name="android:navigationBarColor">@color/colorGray</item>

        <item name="android:windowBackground">@drawable/splash</item>
    </style>
</resources>
